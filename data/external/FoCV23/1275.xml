  <description>
    <statement id="1275.txt-0">
      <text>Rhizome woody.</text>
      <structure id="o8395" name="rhizome">
        <character name="internal_texture" value="woody" />
      </structure>
    </statement>
    <statement id="1275.txt-1">
      <text>Culms tufted, 25–70 cm tall, smooth, clothed at base with pale brown sheaths disintegrating into fibers.</text>
      <structure id="o8396" name="culm">
        <character name="external_texture_or_habit" value="tufted" />
        <character char_type="range_value" name="size" from="25" from_unit="cm" to="70" to_unit="cm" />
        <character name="height" value="tall" />
        <character name="architecture_or_external_texture_or_relief" value="smooth" />
      </structure>
      <structure id="o8397" name="base" />
      <relation id="r1541" name="clothed at" from="o8396" to="o8397" negation="false" />
      <structure id="o8398" name="sheath">
        <character name="coloration" value="brown" modifier="pale" />
        <character name="dehiscence" value="disintegrating" constraint="into fibers" constraintid="o8399" />
      </structure>
      <relation id="r1542" name="with" from="o8397" to="o8398" negation="false" />
      <structure id="o8399" name="fiber" />
    </statement>
    <statement id="1275.txt-2">
      <text>Leaves shorter than culm, blades gray-green, linear, 1.5–3 mm wide, flattish, slightly revolute, margins scabrous, apex acuminate.</text>
      <structure id="o8400" name="leaf">
        <character name="height_or_length" value="shorter" constraint="than culm" constraintid="o8401" />
      </structure>
      <structure id="o8401" name="culm" />
      <structure id="o8402" name="blade">
        <character name="coloration" value="gray-green" />
        <character name="arrangement_or_shape" value="linear" />
        <character char_type="range_value" name="width" from="1.5" from_unit="mm" to="3" to_unit="mm" />
        <character name="shape_or_vernation" value="revolute" modifier="slightly" />
      </structure>
      <structure id="o8403" name="margin">
        <character name="external_texture_or_relief" value="scabrous" />
      </structure>
      <structure id="o8404" name="apex">
        <character name="shape" value="acuminate" />
      </structure>
    </statement>
    <statement id="1275.txt-3">
      <text>Involucral bracts leaflike, shorter than inflorescence, shortly sheathing.</text>
      <structure id="o8405" name="bract" constraint="involucral">
        <character name="architecture" value="leaflike" />
        <character name="height_or_length" value="shorter" constraint="than inflorescence" constraintid="o8406" />
        <character name="architecture_or_feature_or_shape" value="sheathing" modifier="shortly" />
      </structure>
      <structure id="o8406" name="inflorescence" />
    </statement>
    <statement id="1275.txt-4">
      <text>Spikes 4–8;</text>
    </statement>
    <statement id="1275.txt-5">
      <text>upper 2–4 male, approximate, subclavate-cylindric, 1.4–1.8 cm;</text>
      <structure id="o8407" name="spike">
        <character char_type="range_value" name="count" from="4" to="8" />
        <character name="position" value="upper" />
        <character char_type="range_value" name="count" from="2" to="4" />
        <character name="feature_or_reproduction" value="male" />
        <character name="feature" value="approximate" />
        <character name="shape" value="subclavate-cylindric" />
        <character char_type="range_value" name="size" from="1.4" from_unit="cm" to="1.8" to_unit="cm" />
      </structure>
    </statement>
    <statement id="1275.txt-6">
      <text>remaining spikes female, cylindric, 1–3 cm, lower 1 or 2 distant, sometimes lowest one branched, densely many flowered;</text>
      <structure id="o8408" name="spike" constraint="remaining">
        <character name="reproduction" value="female" />
        <character name="shape" value="cylindric" />
        <character char_type="range_value" name="size" from="1" from_unit="cm" to="3" to_unit="cm" />
        <character name="position" value="lower" />
        <character name="count" value="1" />
        <character name="count" value="2" />
        <character name="arrangement" value="distant" />
        <character name="feature" value="lowest" modifier="sometimes" />
        <character name="architecture" value="branched" />
        <character name="count" value="many" modifier="densely" />
        <character name="architecture" value="flowered" />
      </structure>
    </statement>
    <statement id="1275.txt-7">
      <text>peduncles 2–8 cm, scabrous.</text>
      <structure id="o8409" name="peduncle">
        <character char_type="range_value" name="size" from="2" from_unit="cm" to="8" to_unit="cm" />
        <character name="external_texture_or_relief" value="scabrous" />
      </structure>
    </statement>
    <statement id="1275.txt-8">
      <text>Female glumes dark brown or dark purple-red, oblong, 2.5–3.5 mm, margins very narrowly white hyaline, green 1-veined costa scabrous and excurrent into a mucro.</text>
      <structure id="o8410" name="glume" constraint="female">
        <character name="coloration" value="brown" modifier="dark" />
        <character name="coloration" value="purple-red" modifier="dark" />
        <character name="shape" value="oblong" />
        <character char_type="range_value" name="size" from="2.5" from_unit="mm" to="3.5" to_unit="mm" />
      </structure>
      <structure id="o8411" name="margin">
        <character name="coloration" value="hyaline" modifier="very narrowly;white" />
        <character name="coloration" value="green" />
        <character name="architecture_or_feature" value="1-veined" />
        <character name="external_texture_or_relief" value="scabrous" />
        <character name="architecture" value="excurrent" constraint="into mucro" constraintid="o8413" />
      </structure>
      <structure id="o8412" name="costa" />
      <structure id="o8413" name="mucro" />
    </statement>
    <statement id="1275.txt-9">
      <text>Utricles dark brown above, pale below, longer than glume, oblong-elliptic, compressed trigonous, 4–5 mm, membranous, densely hirsute, faintly veined, margins green or pale, apex gradually attenuate into a short beak, orifice 2-toothed.</text>
      <structure id="o8414" name="utricle">
        <character name="coloration" value="brown" modifier="dark" />
        <character name="coloration" value="pale" />
        <character name="length" value="longer" constraint="than glume" constraintid="o8415" />
        <character name="arrangement_or_shape" value="oblong-elliptic" />
        <character name="shape" value="compressed trigonous" />
        <character char_type="range_value" name="size" from="4" from_unit="mm" to="5" to_unit="mm" />
        <character name="feature" value="membranous" />
        <character name="external_texture" value="hirsute" modifier="densely" />
        <character name="architecture_or_feature" value="veined" modifier="faintly" />
      </structure>
      <structure id="o8415" name="glume" />
      <structure id="o8416" name="margin">
        <character name="coloration" value="green" />
        <character name="coloration" value="pale" />
      </structure>
      <structure id="o8417" name="apex">
        <character name="shape" value="attenuate" modifier="gradually" constraint="into beak" constraintid="o8418" />
      </structure>
      <structure id="o8418" name="beak">
        <character name="height_or_length" value="short" />
      </structure>
      <structure id="o8419" name="orifice">
        <character name="shape" value="2-toothed" />
      </structure>
    </statement>
    <statement id="1275.txt-10">
      <text>Nutlets pale brown, loosely enveloped, oblong-trigonous, subcompressed, ca. 1.8 mm, base with a stipe ca. 0.7 mm;</text>
      <structure id="o8420" name="nutlet">
        <character name="coloration" value="brown" modifier="pale" />
        <character name="feature" value="enveloped" modifier="loosely" />
        <character name="shape" value="oblong-trigonous" />
        <character name="feature" value="subcompressed" />
        <character name="size" value="1.8" unit="mm" />
      </structure>
      <structure id="o8421" name="stipe">
        <character name="size" value="0.7" unit="mm" />
      </structure>
      <relation id="r1543" name="base with" from="o8420" to="o8421" negation="false" />
    </statement>
    <statement id="1275.txt-11">
      <text>style erect, scabrous;</text>
      <structure id="o8422" name="style">
        <character name="orientation" value="erect" />
        <character name="external_texture_or_relief" value="scabrous" />
      </structure>
    </statement>
    <statement id="1275.txt-12">
      <text>stigmas 3.</text>
    </statement>
    <statement id="1275.txt-13">
      <text>Fl. and fr. Jul–Aug.</text>
      <structure id="o8423" name="stigma">
        <character name="count" value="3" />
      </structure>
    </statement>
  </description>
  <distribution>Alpine meadows in thickets, forest margins; 2000–3700 m. Qinghai, SW Sichuan, Xizang, NW Yunnan [Bhutan, NE India, Nepal].</distribution>
</treatment>

