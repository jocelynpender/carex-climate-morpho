      <relation id="r1435" name="with" from="o7822" to="o7823" negation="false" />
    </statement>
    <statement id="1255.txt-2">
      <text>Leaves shorter than culm, blades linear, 3–4 mm wide, flat.</text>
      <structure id="o7824" name="leaf">
        <character name="height_or_length" value="shorter" constraint="than culm" constraintid="o7825" />
