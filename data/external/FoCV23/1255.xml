      </structure>
      <structure id="o7830" name="flower" constraint="female" />
    </statement>
    <statement id="1255.txt-6">
      <text>remaining spikes female, oblong, 1.5–3 cm, densely many flowered, pendent, with slender peduncles 2–7 cm.</text>
      <structure id="o7831" name="spike" constraint="remaining">
        <character name="reproduction" value="female" />
