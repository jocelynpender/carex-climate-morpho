      <relation id="r1436" name="with" from="o7831" to="o7832" negation="false" />
    </statement>
    <statement id="1255.txt-7">
      <text>Female glumes dark sanguineous, ovate or lanceolate, ca. 4 mm, midrib stramineous, apex acuminate.</text>
      <structure id="o7833" name="glume" constraint="female">
        <character name="coloration" value="dark" />
        <character name="shape" value="ovate" />
        <character name="shape" value="lanceolate" />
