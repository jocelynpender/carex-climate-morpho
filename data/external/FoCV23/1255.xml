        <character char_type="range_value" name="width" from="3" from_unit="mm" to="4" to_unit="mm" />
        <character name="prominence_or_shape" value="flat" />
      </structure>
    </statement>
    <statement id="1255.txt-3">
      <text>Lower involucral bracts leaflike, shorter than inflorescence, long sheathing, upper ones glumelike.</text>
      <structure id="o7827" name="bract" constraint="lower involucral">
        <character name="architecture" value="leaflike" />
        <character name="height_or_length" value="shorter" constraint="than inflorescence" constraintid="o7828" />
        <character name="architecture_or_feature_or_shape" value="sheathing" />
        <character name="position" value="upper" />
        <character name="feature" value="glumelike" />
      </structure>
      <structure id="o7828" name="inflorescence" />
    </statement>
    <statement id="1255.txt-4">
      <text>Spikes 4–7;</text>
    </statement>
    <statement id="1255.txt-5">
      <text>upper 1–3 male or mixed with female flowers, sometimes gynaecandrous;</text>
      <structure id="o7829" name="spike">
